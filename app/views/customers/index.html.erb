<section class="section">
    <div class="container">
        <h1 class="title">All Customers</h1>

        <div class="buttons">
            <%= link_to "Alphabetized", "/customers/alphabetized", class: "button is-link" %>
            <%= link_to "Missing Email", "/customers/missing_email", class: "button is-warning" %>
        </div>

        <% @customers.each do |customer| %>
        <%= render customer %>
        <% end %>
    </div>
</section>