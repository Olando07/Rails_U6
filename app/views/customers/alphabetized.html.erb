<div class="box">
    <article class="media">
        <div class="media-left">
            <div style="width: 128px; height: 128px; border-radius: 50%; overflow: hidden; flex-shrink: 0;">
                <% if customer.image.attached? %>
                <%= image_tag customer.image, style: "width: 128px; height: 128px; object-fit: cover; display: block;" %>
                <% else %>
                <%= image_tag "https://via.placeholder.com/128", style: "width: 128px; height: 128px; object-fit: cover; display: block;" %>
                <% end %>
            </div>
        </div>
        <div class="media-content">
            <div class="content">
                <p>
                    <strong><%= customer.fullName %></strong>
                    <br>
                    <% if customer.email.present? %>
                    <%= customer.email %>
                    <% else %>
                    <span class="has-text-grey-light">No email provided</span>
                    <% end %>
                    <br>
                    <% if customer.phoneNumber.present? %>
                    Phone: <%= customer.phoneNumber %>
                    <% end %>
                </p>
            </div>
        </div>
    </article>
</div>